                     level=logging.INFO)
logger = logging.getLogger(__name__)

def start(update: Update, context: CallbackContext):
    user = update.effective_user.first_name
    welcome_message = f"–ü—Ä–∏–≤–µ—Ç—Å—Ç–≤—É–µ–º –≤–∞—Å, {user}, –≤ –º–∏—Ä–µ –∑–¥–æ—Ä–æ–≤–æ–≥–æ –æ–±—Ä–∞–∑–∞ –∂–∏–∑–Ω–∏!\n\n"
    welcome_message += "FitLifeBot —Å–æ–∑–¥–∞–Ω —Å–ø–µ—Ü–∏–∞–ª—å–Ω–æ –¥–ª—è —Ç–µ—Ö, –∫—Ç–æ —Ö–æ—á–µ—Ç –∑–∞–±–æ—Ç–∏—Ç—å—Å—è –æ —Å–≤–æ–µ–º —Ç–µ–ª–µ –∏ —Å–∞–º–æ—á—É–≤—Å—Ç–≤–∏–∏. –ú—ã –ø–æ–º–æ–∂–µ–º –≤–∞–º –ø—Ä–∞–≤–∏–ª—å–Ω–æ –ø–∏—Ç–∞—Ç—å—Å—è, –∑–∞–Ω–∏–º–∞—Ç—å—Å—è —Å–ø–æ—Ä—Ç–æ–º –∏ —É–ª—É—á—à–∞—Ç—å –∫–∞—á–µ—Å—Ç–≤–æ –≤–∞—à–µ–π –∂–∏–∑–Ω–∏.\n"
    welcome_message += "\n–î–∞–≤–∞–π—Ç–µ –Ω–∞—á–Ω–µ–º –ø—Ä—è–º–æ —Å–µ–π—á–∞—Å!"
    context.bot.send_message(chat_id=update.effective_chat.id, text=welcome_message)

def motivation(update: Update, context: CallbackContext):
    motivations = ["–ö–∞–∂–¥—ã–π –¥–µ–Ω—å ‚Äî –Ω–æ–≤—ã–π —à–∞–Ω—Å —Å—Ç–∞—Ç—å –ª—É—á—à–µ–π –≤–µ—Ä—Å–∏–µ–π —Å–µ–±—è!",
                   "–ù–µ—Ç –Ω–µ–≤–æ–∑–º–æ–∂–Ω—ã—Ö —Ü–µ–ª–µ–π, –µ—Å—Ç—å –ª–∏—à—å –Ω–µ–¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ —Å–∏–ª—å–Ω–æ–µ –∂–µ–ª–∞–Ω–∏–µ –¥–æ—Å—Ç–∏—á—å –∏—Ö."]
    message = f"–°–µ–≥–æ–¥–Ω—è—à–Ω—è—è –º–æ—Ç–∏–≤–∞—Ü–∏—è:\n*{random.choice(motivations)}*\n\n–ü—Ä–æ–¥–æ–ª–∂–∞–π—Ç–µ –¥–≤–∏–≥–∞—Ç—å—Å—è –≤–ø–µ—Ä—ë–¥ –Ω–µ–±–æ–ª—å—à–∏–º–∏ —à–∞–≥–∞–º–∏, –∏ –≤—Å–∫–æ—Ä–µ –≤—ã –∑–∞–º–µ—Ç–∏—Ç–µ –∑–Ω–∞—á–∏—Ç–µ–ª—å–Ω—ã–µ –ø–µ—Ä–µ–º–µ–Ω—ã –≤ —Å–≤–æ–µ–π –∂–∏–∑–Ω–∏!"
    context.bot.send_message(chat_id=update.effective_chat.id, text=message, parse_mode="MarkdownV2")

def recipes(update: Update, context: CallbackContext):
    message = "–•–æ—Ç–∏—Ç–µ –Ω–∞—É—á–∏—Ç—å—Å—è –≥–æ—Ç–æ–≤–∏—Ç—å –≤–∫—É—Å–Ω–æ –∏ –ø–æ–ª–µ–∑–Ω–æ?\n\n–ù–∞—à –∫–∞–Ω–∞–ª —Å–æ–±—Ä–∞–ª –ª—É—á—à–∏–µ –ø—Ä–æ–≤–µ—Ä–µ–Ω–Ω—ã–µ —Ä–µ—Ü–µ–ø—Ç—ã –¥–ª—è —Ç–µ—Ö, –∫—Ç–æ –∑–∞–±–æ—Ç–∏—Ç—Å—è –æ —Ñ–∏–≥—É—Ä–µ –∏ –∑–¥–æ—Ä–æ–≤—å–µ. –ü–æ–ø—Ä–æ–±—É–π—Ç–µ –ø—Ä–∏–≥–æ—Ç–æ–≤–∏—Ç—å –æ–¥–Ω–æ –∏–∑ –Ω–∞—à–∏—Ö —Ñ–∏—Ä–º–µ–Ω–Ω—ã—Ö –±–ª—é–¥ —É–∂–µ —Å–µ–≥–æ–¥–Ω—è!\n\n–ü–æ—Å–º–æ—Ç—Ä–µ—Ç—å —Ä–µ—Ü–µ–ø—Ç—ã ‚Üí *[edimdoma.ru](https://edimdoma.ru)* üìñü•ó"
    context.bot.send_message(chat_id=update.effective_chat.id, text=message, disable_web_page_preview=True, parse_mode="MarkdownV2")

def trainings(update: Update, context: CallbackContext):
    message = "–ü–æ–¥–¥–µ—Ä–∂–∏–≤–∞—Ç—å —Ç–µ–ª–æ –≤ —Ñ–æ—Ä–º–µ –ª–µ–≥–∫–æ –∏ –ø—Ä–∏—è—Ç–Ω–æ!\n\n–ú—ã –ø—Ä–µ–¥–ª–∞–≥–∞–µ–º —ç—Ñ—Ñ–µ–∫—Ç–∏–≤–Ω—ã–µ —Ç—Ä–µ–Ω–∏—Ä–æ–≤–∫–∏ –¥–ª—è –ª—é–±–æ–≥–æ —É—Ä–æ–≤–Ω—è —Ñ–∏–∑–∏—á–µ—Å–∫–æ–π –ø–æ–¥–≥–æ—Ç–æ–≤–∫–∏. –í—ã –º–æ–∂–µ—Ç–µ –∑–∞–Ω–∏–º–∞—Ç—å—Å—è –¥–æ–º–∞ –∏–ª–∏ –≤ –∑–∞–ª–µ, –≤—ã–±—Ä–∞–≤ –ø–æ–¥—Ö–æ–¥—è—â–∏–π –∫–æ–º–ø–ª–µ–∫—Å —É–ø—Ä–∞–∂–Ω–µ–Ω–∏–π.\n\n–ü–æ–ø—Ä–æ–±—É–π—Ç–µ –æ–¥–Ω—É –∏–∑ –Ω–∞—à–∏—Ö –ø–æ–ø—É–ª—è—Ä–Ω—ã—Ö —Ç—Ä–µ–Ω–∏—Ä–æ–≤–æ–∫: [–í–∏–¥–µ–æ —Ç—Ä–µ–Ω–∏—Ä–æ–≤–∫–∏ –æ—Ç –ê–ª–µ–∫—Å–∞–Ω–¥—Ä–∞ –ù–µ–≤—Å–∫–æ–≥–æ](https://www.youtube.com/watch?v=J-t8iI-ryvY)"
    context.bot.send_message(chat_id=update.effective_chat.id, text=message, parse_mode="MarkdownV2")

def health_tips(update: Update, context: CallbackContext):
    tips = ["–ù–∞—á–Ω–∏—Ç–µ —É—Ç—Ä–æ —Å —Å—Ç–∞–∫–∞–Ω–∞ —Ç—ë–ø–ª–æ–π –≤–æ–¥—ã",
            "–°–æ–±–ª—é–¥–∞–π—Ç–µ —É–º–µ—Ä–µ–Ω–Ω–æ—Å—Ç—å –≤ –ø–æ—Ç—Ä–µ–±–ª–µ–Ω–∏–∏ —Å–ª–∞–¥–∫–æ–≥–æ",
            "–†–µ–≥—É–ª—è—Ä–Ω—ã–µ –ø—Ä–æ–≥—É–ª–∫–∏ —É–∫—Ä–µ–ø–ª—è—é—Ç —Å–µ—Ä–¥–µ—á–Ω–æ-—Å–æ—Å—É–¥–∏—Å—Ç—É—é —Å–∏—Å—Ç–µ–º—É"]
    message = f"–•–æ—Ä–æ—à–µ–µ —Å–∞–º–æ—á—É–≤—Å—Ç–≤–∏–µ –Ω–∞—á–∏–Ω–∞–µ—Ç—Å—è —Å –º–∞–ª–µ–Ω—å–∫–∏—Ö —à–∞–≥–æ–≤!\n\n*{random.choice(tips)}*"
    context.bot.send_message(chat_id=update.effective_chat.id, text=message, parse_mode="MarkdownV2")

def water_reminder(update: Update, context: CallbackContext):
    context.job_queue.run_repeating(water_reminder_job, interval=60*60, first=10)
    context.bot.send_message(chat_id=update.effective_chat.id, text="–ù–∞–ø–æ–º–∏–Ω–∞–Ω–∏—è –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω—ã! üëç")

def water_reminder_job(context: CallbackContext):
    chat_id = context.job.context
    context.bot.send_message(chat_id=chat_id, text="–í—Ä–µ–º—è –≤—ã–ø–∏—Ç—å –≤–æ–¥—ã! üõÅ")

def sleep_tracker(update: Update, context: CallbackContext):
    hours_needed = random.randint(7, 9)
    message = f"–°–æ–Ω ‚Äî –æ—Å–Ω–æ–≤–∞ –≤–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∏—è –∏ –ø—Ä–æ–¥—É–∫—Ç–∏–≤–Ω–æ—Å—Ç–∏!\n\n–í–∞—à–µ–º—É –æ—Ä–≥–∞–Ω–∏–∑–º—É –Ω–µ–æ–±—Ö–æ–¥–∏–º–æ –ø—Ä–∏–º–µ—Ä–Ω–æ *{hours_needed}* —á–∞—Å–∞ —Å–Ω–∞ –¥–ª—è –æ–ø—Ç–∏–º–∞–ª—å–Ω–æ–≥–æ —Ñ—É–Ω–∫—Ü–∏–æ–Ω–∏—Ä–æ–≤–∞–Ω–∏—è."
    context.bot.send_message(chat_id=update.effective_chat.id, text=message, parse_mode="MarkdownV2")

def question_answer(update: Update, context: CallbackContext):
    context.bot.send_message(chat_id=update.effective_chat.id, text="–ó–∞–¥–∞–≤–∞–π—Ç–µ –ª—é–±—ã–µ –∏–Ω—Ç–µ—Ä–µ—Å—É—é—â–∏–µ –≤–∞—Å –≤–æ–ø—Ä–æ—Å—ã –æ –∑–¥–æ—Ä–æ–≤—å–µ, –ø—Ä–∞–≤–∏–ª—å–Ω–æ–º –ø–∏—Ç–∞–Ω–∏–∏ –∏ –∑–∞–Ω—è—Ç–∏—è—Ö —Å–ø–æ—Ä—Ç–æ–º. –ù–∞—à–∏ —ç–∫—Å–ø–µ—Ä—Ç—ã –≥–æ—Ç–æ–≤—ã –ø–æ–¥–µ–ª–∏—Ç—å—Å—è —Ü–µ–Ω–Ω—ã–º–∏ –∑–Ω–∞–Ω–∏—è–º–∏ –∏ —Å–æ–≤–µ—Ç–∞–º–∏.\n\n–ó–∞–¥–∞–π—Ç–µ –≤–∞—à –≤–æ–ø—Ä–æ—Å —Å–µ–π—á–∞—Å ‚Üí */ask*")

def quote_day(update: Update, context: CallbackContext):
    quotes = ["–ö–∞–∂–¥–æ–µ –º–∞–ª–µ–Ω—å–∫–æ–µ —É—Å–∏–ª–∏–µ –ø—Ä–∏–±–ª–∏–∂–∞–µ—Ç –Ω–∞—Å –∫ –±–æ–ª—å—à–æ–π —Ü–µ–ª–∏.",
              "–¢–æ, —á—Ç–æ –∫–∞–∂–µ—Ç—Å—è —Ç—Ä—É–¥–Ω–æ—Å—Ç—å—é —Å–µ–≥–æ–¥–Ω—è, –∑–∞–≤—Ç—Ä–∞ —Å—Ç–∞–Ω–µ—Ç —á–∞—Å—Ç—å—é —É—Å–ø–µ—Ö–∞."]
    message = f"–ù–æ–≤–∞—è —Ü–∏—Ç–∞—Ç–∞ –¥–Ω—è:\n*{random.choice(quotes)}*"
    context.bot.send_message(chat_id=update.effective_chat.id, text=message, parse_mode="MarkdownV2")

def community(update: Update, context: CallbackContext):
    message = "–ü—Ä–∏—Å–æ–µ–¥–∏–Ω—è–π—Ç–µ—Å—å –∫ –Ω–∞—à–µ–π –¥—Ä—É–∂–Ω–æ–π –∫–æ–º–∞–Ω–¥–µ –µ–¥–∏–Ω–æ–º—ã—à–ª–µ–Ω–Ω–∏–∫–æ–≤, –≥–æ—Ç–æ–≤—ã—Ö –¥–µ–ª–∏—Ç—å—Å—è —É—Å–ø–µ—Ö–∞–º–∏ –∏ –ø–æ–¥–¥–µ—Ä–∂–∏–≤–∞—Ç—å –¥—Ä—É–≥ –¥—Ä—É–≥–∞ –Ω–∞ –ø—É—Ç–∏ –∫ –∑–¥–æ—Ä–æ–≤–æ–º—É –æ–±—Ä–∞–∑—É –∂–∏–∑–Ω–∏!\n\n–¢–µ–ª–µ–≥—Ä–∞–º-–≥—Ä—É–ø–ø–∞ FitLife Community: *t.me/FitLifeCommunityGroup*"
    context.bot.send_message(chat_id=update.effective_chat.id, text=message, parse_mode="MarkdownV2")

def run_bot():
    """–û—Å–Ω–æ–≤–Ω–∞—è –ª–æ–≥–∏–∫–∞ –∑–∞–ø—É—Å–∫–∞ –±–æ—Ç–∞"""
    app = Application.builder().token(TOKEN).build()

    # –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –∫–æ–º–∞–Ω–¥
    app.add_handler(CommandHandler("start", start))
    app.add_handler(CommandHandler("motivation", motivation))
    app.add_handler(CommandHandler("recipes", recipes))
    app.add_handler(CommandHandler("trainings", trainings))
    app.add_handler(CommandHandler("health_tips", health_tips))
    app.add_handler(CommandHandler("water_reminder", water_reminder))
    app.add_handler(CommandHandler("sleep_tracker", sleep_tracker))
    app.add_handler(CommandHandler("question_answer", question_answer))
    app.add_handler(CommandHandler("quote_day", quote_day))
    app.add_handler(CommandHandler("community", community))

    app.run_polling()

if __name__ == "__main__":
    # –ó–∞–ø—É—Å—Ç–∏–º –±–æ—Ç –≤ –æ—Ç–¥–µ–ª—å–Ω–æ–π –Ω–∏—Ç–∏, —á—Ç–æ–±—ã –∏–∑–±–µ–∂–∞—Ç—å –∫–æ–Ω—Ñ–ª–∏–∫—Ç–æ–≤ —Å asyncio
    thread = threading.Thread(target=run_bot)
    thread.start()
